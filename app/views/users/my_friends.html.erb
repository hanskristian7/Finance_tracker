<h1>Friends List</h1>
<div class="search-area">
    <h4>Search Friends</h4>
    <%= form_tag search_friend_path, method: :get, remote: true do %>
        <div class="form-group row">
            <div class="col-9 no-right-padding">
                <%= text_field_tag :friend, params[:friend], placeholder: "Search name or email...", autofocus: true, class: "form-control form-control-lg input-symbol" %>
            </div>
            <div class="col-3 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-lg btn-success" do %>
                    <%= fa_icon 'search' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div id="friend-result"></div>

<% if !@friends.empty? %>
    <%= render 'friends/list' %>
<% end %>
